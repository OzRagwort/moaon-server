{{>layout/admin/header}}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">List</h1>
    <p class="mb-4">description</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">


                <div class="row">
                    <div class="col-sm-12 col-md-2">
                        <label class="container-fluid">
                            <select name="dataTables_entries" class="custom-select custom-select-lg form-control form-control-lg container-fluid"
                                    id="select-category-maxResult">
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                        </label>
                    </div>
                    <div class="col-sm-12 col-md-4">
                        <label class="container-fluid">
                            <input type="text" class="form-control form-control-lg container-fluid"
                                   placeholder="idx" id="txt-category-idx">
                        </label>
                    </div>
                    <div class="col-sm-12 col-md-4">
                        <label class="container-fluid">
                            <input type="text" class="form-control form-control-lg container-fluid"
                                   placeholder="name" id="txt-category-name">
                        </label>
                    </div>
                    <div class="col-sm-12 col-md-2">
                        <label class="container-fluid">
                            <button type="button" class="btn btn-primary btn-lg container-fluid" id="btn-category-list">
                                <span class="text">조회</span>
                            </button>
                        </label>
                    </div>
                </div>


                <div class="row">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {{#categoryList}}
                            <tr>
                                <td>{{idx}}</td>
                                <td>{{categoryName}}</td>
                            </tr>
                        {{/categoryList}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

{{>layout/admin/footer}}
{{>layout/admin/footer_js}}